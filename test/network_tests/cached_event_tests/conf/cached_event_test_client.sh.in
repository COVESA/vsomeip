# Configuration to be used by daemon and clients.
export VSOMEIP_CONFIGURATION=cached_event_test_client.json

# Start the routing manager.
export VSOMEIP_APPLICATION_NAME="routingmanagerd"
../../../examples/routingmanagerd/routingmanagerd &
DAEMON_PID=$!

# Start the test clients.
export VSOMEIP_APPLICATION_NAME="client-sample"
./cached_event_test_client &
CLIENT_PID=$!

# Start the test service.
SERVICE_PID=0
if [ -n "$USE_LXC_TEST" ]; then
    echo "starting cached_event_test_service.sh on service LXC"
    ssh -tt -i "$SANDBOX_ROOT_DIR"/commonapi_main/lxc-config/.ssh/mgc_lxc/rsa_key_file.pub -o StrictHostKeyChecking=no root@"$LXC_TEST_SLAVE_IP" "bash -ci \"set -m; cd \\\$SANDBOX_TARGET_DIR/vsomeip_lib/test/network_tests/cached_event_tests; ./cached_event_test_service.sh\"" &
    SERVICE_PID=$!
    echo "remote ssh job id: $!"
elif [ -n "$USE_DOCKER" ]; then
    docker exec "$DOCKER_IMAGE" sh -c "cd $DOCKER_TESTS && ./cached_event_test_service.sh" &
    SERVICE_PID=$!
else
    cat <<EOF
*******************************************************************************
*******************************************************************************
** Please now run:
** cached_event_test_service.sh
** from an external host to successfully complete this test.
**
** You probably will need to adapt the 'unicast' settings in
** cached_event_test_client.json and
** cached_event_test_service.json to your personal setup.
*******************************************************************************
*******************************************************************************
EOF
fi

# Whether the test failed.
FAIL=0

# Wait for the service and client to finish.
wait "$CLIENT_PID" || FAIL=$((FAIL+1))
wait "$SERVICE_PID" || FAIL=$((FAIL+1))

# Send a termination signal to the routing manager and wait for it to exit.
kill "$DAEMON_PID"
wait "$DAEMON_PID" || FAIL=$((FAIL+1))

# Return the result of the test.
exit "$FAIL"
